# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 140
spaces_around_brackets = both
curly_bracket_next_line = false
spaces_around_operators = true

[*.php]
curly_bracket_next_line = false
insert_final_newline = false

[*.js]
curly_bracket_next_line = false
insert_final_newline = true

[*.{ps1,cmd,bat}]
end_of_line = crlf
